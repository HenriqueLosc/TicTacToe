<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox alignment="CENTER_LEFT" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.usp.icmc.tictactoe.HostConnectController">
   <children>
      <Label text="Tic Tac Toe">
         <font>
            <Font size="56.0" />
         </font>
      </Label>
      <RadioButton fx:id="hostRadio" mnemonicParsing="false" onAction="#setRadioHost" text="Host" />
      <HBox>
         <children>
            <TextField promptText="Your IP" text="255.255.255.0" />
            <TextField fx:id="hostPortText" promptText="Port" />
            <Button fx:id="hostButton" mnemonicParsing="false" text="Host" />
         </children>
      </HBox>
      <RadioButton fx:id="connectRadio" mnemonicParsing="false" onAction="#setRadioConnect" text="Connect" />
      <HBox>
         <children>
            <TextField fx:id="connectIPText" promptText="connect to IP" />
            <TextField fx:id="connectPortText" promptText="Port" />
            <Button fx:id="connectButton" mnemonicParsing="false" text="Connect" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
