<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox alignment="CENTER_LEFT" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.usp.icmc.tictactoe.HostConnectController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="Tic Tac Toe">
               <font>
                  <Font size="56.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <RadioButton fx:id="hostRadio" mnemonicParsing="false" onAction="#setRadioHost" selected="true" text="Host">
         <toggleGroup>
            <ToggleGroup fx:id="selectRadio" />
         </toggleGroup></RadioButton>
      <HBox alignment="CENTER">
         <children>
            <TextField fx:id="hostIPText" alignment="CENTER" disable="true" promptText="Your IP" >
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin></TextField>
            <TextField fx:id="hostPortText" alignment="CENTER" promptText="Port" text="1234">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin></TextField>
            <ProgressIndicator fx:id="hostIndicator" opacity="0.0" prefHeight="24.0" prefWidth="16.0" />
            <Button fx:id="hostButton" mnemonicParsing="false" onAction="#waitForConnection" text="Host">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="6.0" top="5.0" />
               </HBox.margin></Button>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </HBox>
      <RadioButton fx:id="connectRadio" mnemonicParsing="false" onAction="#setRadioConnect" text="Connect" toggleGroup="$selectRadio" />
      <HBox alignment="CENTER">
         <children>
            <TextField fx:id="connectIPText" alignment="CENTER" disable="true" promptText="connect to IP" text="localhost">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin></TextField>
            <TextField fx:id="connectPortText" alignment="CENTER" disable="true" promptText="Port" text="1234">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin></TextField>
            <Button fx:id="connectButton" disable="true" mnemonicParsing="false" onAction="#connectToServer" text="Connect">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin></Button>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
